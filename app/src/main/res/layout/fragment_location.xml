<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.erenlivingstone.rider.appscreens.location.LocationFragment">

    <Button
        android:id="@+id/my_location_button"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_centerInParent="true"
        android:text="Use my location" />

    <Button
        android:id="@+id/enter_location_button"
        android:layout_width="300dp"
        android:layout_height="36dp"
        android:layout_below="@id/my_location_button"
        android:layout_centerInParent="true"
        android:text="Enter a location" />

    <ProgressBar
        android:id="@+id/indeterminate_progress_bar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:theme="@style/CircularProgress"
        android:visibility="gone" />

</RelativeLayout>
